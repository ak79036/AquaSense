<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings">

    <!-- TODO: Update blank fragment layout -->



    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#E8E8E8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="@drawable/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="118dp"
                android:layout_height="95dp"
                android:layout_marginBottom="200dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_margin="30dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/settings" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Settings"
                android:textColor="#1B4965"
                android:textSize="35sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.429"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.215" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="361dp"
            android:layout_height="536dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_background"
            android:elevation="7dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView3"
                    android:layout_width="79dp"
                    android:layout_height="79dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/addimage" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="50dp"
                    android:text="user_name"
                    android:textSize="23sp"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="top" />
            </LinearLayout>

            <View
                android:id="@+id/viewff"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#D9D9D9" />

            <TextView
                android:id="@+id/account_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="31dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Account settings"
                android:fontFamily="@font/poppinsregular"
                android:gravity="top"
                android:textSize="20sp"
                android:textColor="#9198A1"
                />


            <LinearLayout
                android:id="@+id/viewofedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/edit_profile"
                    android:layout_width="90dp"
                    android:layout_height="21dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="7dp"
                    android:text="Edit profile"
                    android:textSize="18sp"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/drop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="end"
                    android:layout_marginStart="200dp"
                    android:text=">"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutofsignout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="Change password"
                    android:textSize="18sp"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/drope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="end"
                    android:layout_marginStart="146dp"
                    android:text=">"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/push_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="Push notification"
                    android:textSize="18sp"
                    android:gravity="top"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="136dp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/dark_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="Dark mode"
                    android:textSize="18sp"
                    android:gravity="top"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="184dp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <View
                android:id="@+id/viewf"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#D9D9D9" />

            <TextView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="31dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="More"
                android:fontFamily="@font/poppinsregular"
                android:gravity="top"
                android:textSize="20sp"
                android:textColor="#9198A1"
                />

            <LinearLayout
                android:id="@+id/layoutofaboutus"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/about_us"
                    android:layout_width="90dp"
                    android:layout_height="21dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="5dp"
                    android:gravity="top"
                    android:text="About us"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/drop2w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:text=">"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutofprivacypolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="Privacy Policy"
                    android:textSize="18sp"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/drop2q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="end"
                    android:layout_marginStart="179dp"
                    android:text=">"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutoftermsandcondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="Terms and conditions"
                    android:textSize="18sp"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/drop3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="end"
                    android:layout_marginStart="118dp"
                    android:text=">"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>