                        app:layout_constraintHorizontal_bias="0.297"
                        app:layout_constraintStart_toEndOf="@+id/user_imagep"
                        app:layout_constraintTop_toBottomOf="@+id/providedByp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_imagep"
                        android:layout_width="33dp"
