                        android:layout_width="199dp"
                        android:layout_height="88dp"
                        android:layout_marginTop="20dp"
                        android:background="#EBF2FA"
                        android:fontFamily="@font/poppins"
                        android:overScrollMode="always"
                        android:padding="5dp"
                        android:text="Trending drainage solutions comprise smart stormwater management, green infrastructure, improved drainage systems, flood-resilient urban planning, and adaptive governance, enabling effective water management in urban areas to mitigate flooding risks."
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/user_imagep" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
